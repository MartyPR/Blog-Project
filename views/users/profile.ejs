<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/9c0d6208df.js" crossorigin="anonymous"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/profile.css" />
    <link rel="stylesheet" href="/public/css/style.css" />
    <title>Profile</title>
  </head>
  <body>
    <%-include('../partials/navbar.ejs') %>
    <div class="profile-container">
      <header
        style="
          background-image: url('<%=user?.coverImage %>');
        "
      >
        <div class="icons-container">
          <p>
            <a href="/api/v1/user/upload-cover-photo-form">
            <i class="fas fa-camera upload-btn"></i>
          </a>
          </p>
          <p>
            <a href="/api/v1/user/<%=user?._id%>">
              <i class="fas fa-edit"></i>
            </a>
            
          </p>
          <p>
            <a href="/api/v1/user/update-password">
              <i class="fas fa-lock"></i>
              </a>
            
          </p>
          <p>
            <i class="fas fa-sign-out-alt"></i>
          </p>
        </div>
        <!-- upload cover image icon -->
        <!-- <i class="fas fa-camera upload-btn"></i> -->
      </header>

      <!-- profile image -->
      <div class="profile-img">
        <img
          src="<%=user?.profileImage %>"
          alt="profile image"
        />
        <!-- upload profile image icon -->
         <a href="/api/v1/user/upload-profile-photo-form">
          <i class="fas fa-camera upload-btn"></i>
         </a>
       
      </div>
      <!-- personal details -->
      <div class="personal-container">
        <div class="details-wrapper">
          <div class="details">
            <i class="fas fa-user"></i>
            <p>Name: <%=user?.fullname%></p>
          </div>
          <div class="details">
            <i class="fas fa-envelope"></i>
            <p>Email: <%=user?.email%></p>
          </div>
          <!-- date joined -->
          <div class="details">
            <i class="fas fa-calendar"></i>
            <p>Date Joined: <%=user?.createdAt.toLocaleDateString()%></p>
          </div>
        </div>
      </div>
    </div>
    <div class="latest-post-title">
      <!-- Icon -->
      <i class="fas fa-book-open"></i>
      <h1>Latest Posts (20)</h1>
      
    </div>

    <!-- content -->
    <section class="container-flex">

      <%if(user?.posts.length<=0){%>
        <h1>You have no post</h1>
        <%}else{%>
              
      <% user?.posts?.map(function(result){ %>
  
        <article class="post-content">
          <img src="<%=result?.image%>" alt="" class="post-image" />
          <p class="post-info">
            <span class="post-author">
              <i class="fas fa-user"></i>
              <a href="#"><%=user?.fullname%></a>
            </span>
            <span class="post-date">
              <i class="far fa-calendar-alt"></i>
              <time datetime="2020-01-01"><%=result.createdAt.toLocaleDateString()%></time>
            </span>
          </p><h1 class="post-title"><%=result.title%></h1>
          <p class="post-body">
            <%=tuncatePost(result.description)%>

          </p>
          <!-- category -->
          <div class="post-category">
            <span>Category:<%=result.category%></span>
          </div>
          <a href="/" class="post-read-more">Continue Reading...</a>
        </article> 
    <%  }); %>

    <%}%>

    


        
    
      
    </section>
    <!-- footer -->
    <footer>
      <div class="about">
        <h1><span class="logo-text">Novotek </span> <span>Blog</span></h1>
        <p>
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Corrupti a
          recusandae, molestiae incidunt
        </p>
        <!-- Contacts -->
        <div class="contact">
          <span>
            <i class="fas fa-phone"></i>
            + (123) 456 789
          </span>
          <span>
            <i class="fas fa-envelope"></i>
            
            <a href="mailto:support@inovotek.com">
              support@inovotek.com
            </a>
          </span>

        </div>
        <!-- socials -->
        <div class="socials">
          <a href="https://www.youtube.com/c/inovotek-academy">
            <i class="fab fa-youtube"></i>
          </a>
          <a href="https://www.youtube.com/c/inovotek-academy">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="https://www.youtube.com/c/inovotek-academy">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="https://www.youtube.com/c/inovotek-academy">
            <i class="fab fa-facebook"></i>
          </a>
         
    </footer>
  </body>
</html>


