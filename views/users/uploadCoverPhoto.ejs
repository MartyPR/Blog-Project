  <body>
    <%-include('../partials/navbar.ejs') %>
    <div class="form-container">
      <!-- icon -->
      <h1>Upload Cover photo</h1>
      <p>
        <!-- upload icon -->
      </p>

      <%if(error){%>
        <small class="error">
          <i class="fas fa-exclamation-circle"></i>
          <%=error%>
        </small>
      <%}%>
      
      <form action="/api/v1/user/cover_img_upload?_method=PUT" method="post" enctype="multipart/form-data">
